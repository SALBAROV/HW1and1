<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_value"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Здесь будет наш текст"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_value"
        android:padding="6dp"
        android:hint="Введите ваш текст"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_change"
        android:text="Изменить"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_value"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button"
        android:text="button"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>